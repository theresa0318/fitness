<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rank.RankFragment">

    <ImageView
        android:id="@+id/rank_icon2"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/rank_icon"
        android:layout_marginStart="72dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/rank_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="72dp"
        android:gravity="start"
        android:text="Top 3"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rank_icon2" />

    <TextView
        android:id="@+id/text_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="start"
        android:text="Your ranking :"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/your_rank"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table_rank"
        android:layout_marginLeft="80dp" />

    <TextView
        android:id="@+id/your_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="start"
        android:text="> 10"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/table_rank"
        android:layout_marginRight="80dp" />

    <TableLayout
        android:id="@+id/table_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:stretchColumns="0,4"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rank_label">

        <TableRow>
            <TextView />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="No.1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Nobody"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dist_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0 KM"
                android:textSize="18sp" />
            <TextView />

        </TableRow>


        <TableRow>
            <TextView />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="No.2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Nobody"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dist_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0 KM"
                android:textSize="18sp" />
            <TextView />
        </TableRow>
        <TableRow>
            <TextView />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="No.3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Nobody"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dist_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0 KM"
                android:textSize="18sp" />
            <TextView />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>