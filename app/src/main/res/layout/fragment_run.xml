<?xml version="1.0" encoding="utf-8"?>

<!-- Referenced from https://github.com/umano/AndroidSlidingUpPanel. -->
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/underView"
    tools:context=".ui.run.RunFragment">

    <!-- MAIN CONTENT -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            sothree:theme="@style/ActionBar"
            android:layout_width="match_parent"/>
        <com.google.android.gms.maps.MapView android:id="@+id/mapview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>

    <!-- SLIDING LAYOUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/dragView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timeCalculator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="24sp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Time: 00:00:00"/>

            <ImageButton
                android:id="@+id/timeStart"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:src="@drawable/start"
                android:background="@color/white"
                android:scaleType="fitXY"/>

            <ImageButton
                android:id="@+id/timePause"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:src="@drawable/pause"
                android:background="@color/white"
                android:scaleType="fitXY"/>

            <ImageButton
                android:id="@+id/timeStop"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:src="@drawable/stop"
                android:background="@color/white"
                android:scaleType="fitXY"/>

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/underView">
            <TextView
                android:id="@+id/startPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="50dp"
                android:textSize="24sp"
                android:paddingLeft="20dp"
                android:text="Start: null"/>

            <TextView
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:paddingLeft="20dp"
                android:text="Destination: null"/>

            <TextView
                android:id="@+id/length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:paddingLeft="20dp"
                android:text="Distance: 0 km"/>

            <TextView
                android:id="@+id/rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:paddingLeft="20dp"
                android:text="Current Rank: 6"/>

            <TextView
                android:id="@+id/cong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:paddingLeft="20dp"
                android:text="Congradulations, Username! You did a good job today!"
                android:textStyle="italic"
                android:textColor="@color/purple_700"/>

            <TextView
                android:id="@+id/fitsoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="32sp"
                android:paddingRight="20dp"
                android:gravity="right"
                android:text="-- FitSoc"
                android:textStyle="italic|bold"
                android:textColor="@color/purple_700"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shareTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Share with your friends:"/>

                <ImageButton
                    android:id="@+id/share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|right"
                    android:src="@drawable/share_icon"
                    android:background="@color/white"
                    android:scaleType="fitXY"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
